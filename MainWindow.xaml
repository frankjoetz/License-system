<Window x:Class="LicenseXQO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicenseXQO"
        mc:Ignorable="d"
        Title="XQO License System" Height="160" Width="310">
    <Grid>
        <Label x:Name="labelLogin" Content="Login:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelLogin_Copy" Content="Password:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="77,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="77,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="272" Click="BtnLogin_Click"/>
        <Button x:Name="btnDebug" Content="Debug info" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="272" Click="BtnDebug_Click"/>

    </Grid>
</Window>
